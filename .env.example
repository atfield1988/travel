# ============================================
# BACKEND ENVIRONMENT VARIABLES
# ============================================

# Database connection (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:password@db:5432/traveldb

# JWT Secret (change this to a random string in production!)
JWT_SECRET_KEY=super-secret-jwt-key-change-me-in-production

# Google OAuth (get from https://console.cloud.google.com)
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_HERE

# Kakao REST API Key (get from https://developers.kakao.com)
KAKAO_REST_API_KEY=YOUR_KAKAO_REST_API_KEY_HERE

# ExchangeRate API Key (get from https://www.exchangerate-api.com)
EXCHANGE_RATE_API_KEY=YOUR_EXCHANGE_RATE_API_KEY_HERE

# Optional: Naver API (for fallback place search)
# NAVER_CLIENT_ID=YOUR_NAVER_CLIENT_ID_HERE
# NAVER_CLIENT_SECRET=YOUR_NAVER_CLIENT_SECRET_HERE

# ============================================
# FRONTEND ENVIRONMENT VARIABLES
# ============================================

# Kakao JavaScript Key (get from https://developers.kakao.com)
NEXT_PUBLIC_KAKAO_JS_KEY=YOUR_KAKAO_JAVASCRIPT_KEY_HERE

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# NextAuth configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=super-secret-nextauth-change-me-in-production

# Google OAuth (same as backend)
# GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE
# GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_HERE
